@model IEnumerable<OzzyWeb1.Models.Persona>

@{
    ViewData["Title"] = "Personas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Personas</h2>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Crear Persona
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NoDocumento)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoDocumento)</th>
                    <th>@Html.DisplayNameFor(model => model.Genero)</th>
                    <th>@Html.DisplayNameFor(model => model.NombrePersona)</th>
                    <th>@Html.DisplayNameFor(model => model.EmailPersona)</th>
                    <th>@Html.DisplayNameFor(model => model.DireccionPersona)</th>
                    <th>@Html.DisplayNameFor(model => model.TelefonoPersona)</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NoDocumento</td>
                        <td>@item.TipoDocumento</td>
                        <td>@item.Genero</td>
                        <td>@item.NombrePersona</td>
                        <td>@item.EmailPersona</td>
                        <td>@item.DireccionPersona</td>
                        <td>@item.TelefonoPersona</td>
                        

                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.IdPersona" class="btn btn-primary btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@item.IdPersona" class="btn btn-info btn-sm text-black me-1">
                                <i class="bi bi-eye"></i> Detalles
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.IdPersona" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
