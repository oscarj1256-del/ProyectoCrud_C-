@model IEnumerable<OzzyWeb1.Models.Curso>

@{
    ViewData["Title"] = "Cursos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Cursos</h2>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Crear Curso
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Duracion)</th>
                    <th>@Html.DisplayNameFor(model => model.NumeroCurso)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Detalle)</th>
                    <th>@Html.DisplayNameFor(model => model.Costo)</th>
                    <th>@Html.DisplayNameFor(model => model.NivelAprendizaje)</th>
                    <th>Categoría</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Duracion</td>
                        <td>@item.NumeroCurso</td>
                        <td>@item.Nombre</td>
                        <td>@item.Detalle</td>
                        <td>@item.Costo</td>
                        <td>@item.NivelAprendizaje</td>
                        <td>@item.CategoriaIdCategoriaNavigation?.IdCategoria</td>

                        <td class="text-end">

                            <a asp-action="Edit" asp-route-id="@item.IdCurso" class="btn btn-primary btn-sm me-1 d-inline-flex align-items-center">
                                <i class="bi bi-pencil-square me-1"></i>
                                <span>Editar</span>
                            </a>

                            <a asp-action="Details" asp-route-id="@item.IdCurso" class="btn btn-info btn-sm text-white me-1 d-inline-flex align-items-center">
                                <i class="bi bi-eye me-1"></i>
                                <span>Detalles</span>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.IdCurso" class="btn btn-danger btn-sm d-inline-flex align-items-center">
                                <i class="bi bi-trash me-1"></i>
                                <span>Eliminar</span>
                            </a>

                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
