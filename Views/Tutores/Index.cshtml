@model IEnumerable<OzzyWeb1.Models.Tutor>

@{
    ViewData["Title"] = "Tutores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">Tutores</h2>

    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Crear Tutor
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">

        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Experiencia)</th>
                    <th>@Html.DisplayNameFor(model => model.Observaciones)</th>
                    <th>Persona</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Experiencia</td>
                        <td>@item.Observaciones</td>

                        <td>
                            @item.PersonaIdPersonaNavigation?.NombrePersona
                            <br />
                            <small class="text-muted">ID: @item.PersonaIdPersonaNavigation?.IdPersona</small>
                        </td>

                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.IdTutor" class="btn btn-primary btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>

                            <a asp-action="Details" asp-route-id="@item.IdTutor" class="btn btn-info btn-sm text-white me-1">
                                <i class="bi bi-eye"></i> Detalles
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.IdTutor" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
